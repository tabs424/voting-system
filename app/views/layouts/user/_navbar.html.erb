<div class="container">
  <header class="blog-header py-3">
    <div class="row flex-nowrap justify-content-between align-items-center">
      <div class="col-4 pt-1">
        <%= link_to 'Voting System', users_root_path, class: 'link-secondary' %>
      </div>
      <div class="col-4 d-flex justify-content-end align-items-center gap-2">
        <a class="p-2 link-secondary" href="#">About</a>
        <a class="p-2 link-secondary" href="#">Contact Us</a>

        <% if current_user %>
          <%= button_to 'Sign Out', destroy_user_session_path,
                        method: :delete, class: 'btn btn-sm btn-outline-danger' %>
        <% else %>
          <%= link_to 'Log in', new_user_session_path,
                      class: 'btn btn-sm btn-outline-secondary' %>
          <%= link_to 'Sign up', new_user_registration_path,
                      class: 'btn btn-sm btn-outline-secondary' %>
        <% end %>
      </div>
    </div>
  </header>

</div>